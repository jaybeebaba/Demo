<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Frontend Test</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link href="/css/style.css" rel="stylesheet" type="text/css">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"
        integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
</head>

<body>
    <div class="header">

    </div>
    <div>
        <div class="container row" id="main">
            <div class="col-lg-3" id="obj1">
                <div id="option"><strong>Option</strong></div>
                <div id="obj-1">Obj1</div>
            </div>

            <div class="col-lg-3" id="obj2">
                <div id="options">
                    <select>
                        <option value="A">Dropdown</option>
                        <option value="A">A</option>
                        <option value="B">B</option>
                    </select>
                </div>
                <div id="obj-2">Obj2</div>
            </div>

            <div class="col-lg-6" id="items">

                <div class="row items">
                    <div class="col-lg-3">
                        <div class="bg">1</div>
                    </div>

                    <div class="col-lg-8" id="a1">Item A1</div>
                </div>

                <div class="row items">
                    <div class="col-lg-3">
                        <div class="bg">2</div>
                    </div>

                    <div class="col-lg-8" id="a2">Item A2</div>
                </div>

                <div class="row items">
                    <div class="col-lg-3">
                        <div class="bg">3</div>
                    </div>

                    <div class="col-lg-8" id="a3">Item A3</div>
                </div>
                <div class="hidden">
                    <div class="row items ">
                        <div class="col-lg-3">
                            <div class="bg">4</div>
                        </div>

                        <div class="col-lg-8" id="a4">Item A4</div>
                    </div>
                    <div class="row items ">
                        <div class="col-lg-3">
                            <div class="bg">5</div>
                        </div>

                        <div class="col-lg-8" id="a5">Item A5</div>
                    </div>
                    <div class="row items">
                        <div class="col-lg-3">
                            <div class="bg">6</div>
                        </div>

                        <div class="col-lg-8" id="a6">Item A6</div>
                    </div>
                </div>
                <div id="obj3">
                    Obj3
                </div>
            </div>


        </div>
    </div>


    <div class="footer">

    </div>

    <script>
        $("#option").click(function () {
            $("#obj2").slideDown();
        });

        $("#options").change((e) => {
            if (e.target.value === "A") {
                $(".hidden").css("display", "block");
                $("#a1").text("Item A1");
                $("#a2").text("Item A2");
                $("#a3").text("Item A3");
                $("#a4").text("Item A4");
                $("#a5").text("Item A5");
                $("#a6").text("Item A6");
            } else if (e.target.value === 'B') {
                $(".hidden").css("display", "block");
                $("#a1").text("Item B1");
                $("#a2").text("Item B2");
                $("#a3").text("Item B3");
                $("#a4").text("Item B4");
                $("#a5").text("Item B5");
                $("#a6").text("Item B6");
            }
        })


    </script>
</body>

</html>